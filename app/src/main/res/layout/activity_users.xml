<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@drawable/background">

    <!--1. 中间可滑动的viewPager-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linearLayout"
        android:layout_above="@id/bottom_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/menu"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sortByName"
                    android:layout_width="272dp"
                    android:layout_height="150dp"
                    android:text="姓名"
                    android:textSize="54px"
                    android:background="@drawable/panon"
                    android:textColor="@color/whitesmoke" >
                    </Button>

                <Button
                    android:id="@+id/sortBySex"
                    android:layout_width="272dp"
                    android:layout_height="150dp"
                    android:text="性别"
                    android:textSize="54px"
                    android:background="@drawable/panon"
                    android:textColor="@color/whitesmoke"/>

                <Button
                    android:id="@+id/sortByID"
                    android:layout_width="272dp"
                    android:layout_height="150dp"
                    android:text="病历号"
                    android:textSize="54px"
                    android:background="@drawable/panon"
                    android:textColor="@color/whitesmoke"/>

                <Button
                    android:id="@+id/sortByTime"
                    android:layout_width="272dp"
                    android:layout_height="150dp"
                    android:text="入院时间"
                    android:textSize="54px"
                    android:layout_gravity="center"
                    android:background="@drawable/panon"
                    android:textColor="@color/whitesmoke"/>
            </LinearLayout>

            <android.support.v7.widget.SearchView
                android:id="@+id/userSearchview"
                android:layout_width="500dp"
                android:layout_height="86dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/searchbar"
                app:iconifiedByDefault="false"
                >

            </android.support.v7.widget.SearchView>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <GridView
                android:id="@+id/users_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="20dp"
                android:horizontalSpacing="20dp"
                android:columnWidth="400dp"
                android:stretchMode="columnWidth"
                android:gravity="center">

            </GridView>
        </FrameLayout>
    </LinearLayout>

    <!--2. 底部的三个图标按钮-->

    <!--3. 顶部的titleBar-->
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/user"
            android:stateListAnimator="@animator/selector_animators_12" />

        <ImageView
            android:layout_width="208dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logo" />

        <Button
            android:id="@+id/add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/add"
            android:stateListAnimator="@animator/selector_animators_12" />

    </RelativeLayout>

    <!-- 在布局文件中引用复用的布局文件 -->
    <include layout="@layout/common_top_layout" />



</RelativeLayout>
