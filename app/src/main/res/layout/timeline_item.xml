<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480dp"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/show_time"
        android:visibility="invisible"
        android:text="测试数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="36dp"
        android:textColor="@color/sysblue"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:padding="5dp"
        android:text="游戏模式"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/show_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/show_title"
        android:padding="5dp"
        android:text="场景1"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/hide_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/image"
        android:padding="5dp"
        android:text="id"
        android:textSize="30dp"
        android:visibility="invisible" />

    <View
        android:id="@+id/line_normal"
        android:layout_width="225dp"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="#A6A6A6" />
    <View
        android:visibility="gone"
        android:id="@+id/line_highlight"
        android:layout_width="225dp"
        android:layout_height="5dp"
        android:layout_centerVertical="true"
        android:background="@color/sysblue" />

    <ImageView
        android:layout_toRightOf="@id/line_normal"
        android:layout_centerVertical="true"
        android:id="@+id/image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/show_time"
        android:src="@drawable/point2" />
    <View
        android:layout_toRightOf="@+id/image"
        android:id="@+id/line_highlight2"
        android:layout_width="225dp"
        android:layout_height="5dp"
        android:layout_centerVertical="true"
        android:background="@color/sysblue" />

</RelativeLayout>