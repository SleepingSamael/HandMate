<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="@drawable/background">

<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="148dp"
    android:layout_marginBottom="148dp"
    android:layout_marginRight="64dp"
    android:layout_marginLeft="64dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp"
    android:stateListAnimator="@animator/selector_animators_102">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:alpha="0.7"
        android:background="#2a78e5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/connecticon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="手套连接"
            android:textColor="@color/white"
            android:textSize="48px" />

        <ImageView
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1252dp"
            app:srcCompat="@drawable/refresh" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:text="健侧手套"
            android:textColor="@color/sysblue"
            android:textSize="48sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评估手套"
            android:textSize="48sp"
            android:textColor="@color/sysblue"
            android:layout_marginLeft="690dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="238dp"
        android:background="#E2E2E2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="88dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/healthy_glove_item_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="34dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            tools:listitem="@layout/glove_item" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#DEDEDE"
            android:visibility="visible" />

        <ListView
            android:id="@+id/diseased_glove_item_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="52dp"
            android:layout_weight="1"
            android:divider="@drawable/table_divide"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            tools:listitem="@layout/glove_item" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        android:layout_gravity="bottom"
        android:layout_marginBottom="88dp"/>

</android.support.v7.widget.CardView>

<!--2. 底部的三个图标按钮-->

<RelativeLayout
    android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/user"
        android:background="@drawable/user" />
    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/user"
        android:layout_toRightOf="@+id/user"
        android:text="用户1"
        android:textColor="@color/darkgrey"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="208dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/logo" />
    <Button
        android:id="@+id/set"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/setting" />

</RelativeLayout>

<!--3. 顶部的titleBar-->
<!-- 在布局文件中引用复用的布局文件 -->
    <include
        layout="@layout/common_top_layout"
        />


</RelativeLayout>
