<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:clipChildren="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/bottom_layout"
        android:id="@+id/back1">

        <android.support.v7.widget.CardView
            android:id="@+id/details"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="135dp"
            android:layout_marginLeft="135dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="1dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/DetailPhoto"
                    android:layout_width="800dp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="48px"
                        tools:text="La Crescenta-Montrose,CA91020" />


                    <TextView
                        android:id="@+id/introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="260dp"
                        android:layout_marginTop="35dp"
                        android:fontFamily="cursive"
                        android:scrollbars="vertical"
                        android:text="介绍介绍介绍介介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍"
                        android:textSize="30px" />


                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="222dp"
                        android:layout_height="82dp"
                        android:layout_gravity="right"
                        android:background="@drawable/startbutton"
                        android:elevation="6dp"
                        android:stateListAnimator="@animator/selector_animators_102"
                        android:text="开始"
                        android:textColor="@color/white"
                        android:textSize="42px" />


                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>
        <!--1. 中间可滑动的viewPager-->
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:overScrollMode="never"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"

            />
    </RelativeLayout>

    <!--2. 底部的三个图标按钮-->
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/user"
            android:background="@drawable/user"
            android:stateListAnimator="@animator/selector_animators_12"/>
        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/user"
            android:layout_toRightOf="@+id/user"
            android:text="用户1"
            android:textColor="@color/darkgrey"
            android:textSize="40px" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="208dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_home"
            android:stateListAnimator="@animator/selector_animators_102"/>
        <Button
            android:id="@+id/set2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/setting"
            android:stateListAnimator="@animator/selector_animators_12"/>

    </RelativeLayout>

    <!--3. 顶部的titleBar-->
    <!-- 在布局文件中引用复用的布局文件 -->
    <include layout="@layout/common_top_layout" />

</RelativeLayout>
